# Database
MONGODB_URI=mongodb://localhost:27017/ecommercepro

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false      # true if using TLS
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM="EcommercePro <no-reply@example.com>"

# Other env vars
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174
# Front-end URL for email links
FRONTEND_URL=http://localhost:5173
# API base URL for client and admin
VITE_API_URL=http://localhost:5000  # Base API URL for client and admin
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1d          # e.g. '1d', '12h', etc.
COOKIE_MAX_AGE=86400000    # in milliseconds
